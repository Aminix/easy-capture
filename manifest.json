{
	"name": "Easy Capture",
	"version": "1.0",
	"description": "Take screenshots of websites",
	"background": {
		"persistent": false,
		"scripts": ["js/background.js", "js/vendor/jquery-1.9.1.min.js"]
	},
	"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content_script.js"]
    }
  ],
	"browser_action": {
		"default_icon": "img/icon.ico",
		"default_title": "Shoot!",
		"default_popup": "popup.html"
	},
	"permissions": ["tabs", "<all_urls>"],
	"web_accessible_resources": ["css/imgareaselect/border-h.gif", "css/imgareaselect/border-v.gif"],
	"manifest_version": 2
}