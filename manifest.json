{
	"name": "Get-Capture",
	"version": "1.0.1",
	"description": "Free and easy way to take screenshots on Google Chrome!",
	"background": {
		"persistent": false,
		"scripts": ["js/background.js"]
	},
	"content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content_script.js", "js/html2canvas.js", "js/vendor/jquery-1.9.1.min.js", "js/jquery.plugin.html2canvas.js"]
    }
  ],
	"browser_action": {
		"default_icon": "img/icon.png",
		"default_title": "Shoot!",
		"default_popup": "popup.html"
	},
	"permissions": ["tabs", "<all_urls>"],
	"web_accessible_resources": ["css/imgareaselect/border-h.gif", "css/imgareaselect/border-v.gif"],
	"content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
	"manifest_version": 2
}